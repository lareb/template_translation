<p id="notice"><%= notice %></p>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Templates</h1>
  <p class="lead">Following are the Templates available in the system, To get detail information Please click on Blue button on each template card.</p>
</div>

<div class="container-fluid">
  <div class="row">
    <% @templates.each do |template| %>
    <div class="col-lg-3">
      <div class="card">
        <div class="card-body">
          <div class="text-center">
            <span class="display-5"><i class="icon-grid gradient-9-text"></i></span>
            <h2 class="mt-3"><%= template.title.truncate(20)%></h2>
            <p><%= template.updated_at.strftime('%B %d, %Y at %I:%M %p')%></p>
            <%= link_to template_translation_texts_path(template), class: 'btn gradient-9 btn-lg border-0 btn-rounded px-5' do%>
              <i class="fa fa-language"></i> Templates
            <%end%>
            <%= link_to template_path(template), class: 'btn gradient-9 btn-lg border-0 btn-rounded px-5', method: 'delete' do%>
              <i class="fa fa-trash"></i>
            <%end%>

            <!-- <a href="javascript:void()" class="btn gradient-9 btn-lg border-0 btn-rounded px-5">Fixnow</a> -->
            <!-- <a href="javascript:void()" class="btn gradient-9 btn-lg border-0 btn-rounded px-5">Fixnow</a> -->
          </div>
        </div>
      </div>
    </div>
    <%end%>

  </div>
</div>

<%= link_to new_template_path, class: 'btn btn-primary btn-circle btn-xl add-new-template' do %>
  <i class="fa fa-plus"></i>
<%end%>
